{
  "version": 2,
  "name": "al-syed-affiliate",
  "builds": [
    {
      "src": "shadcn-ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "shadcn-ui/dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "shadcn-ui/dist/$1" }
  ],
  "env": {
    "VITE_API_BASE_URL": "/api",
    "VITE_APP_ENV": "production"
  }
}
